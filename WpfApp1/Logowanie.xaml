<Window x:Class="WpfApp1.Logowanie"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Logowanie" Height="800" Width="1200">
    <Border Padding="15">
        <Grid>
            <TextBlock Text="Login:" FontSize="40" Margin="382,337,666,329" RenderTransformOrigin="0.93,0.482" ></TextBlock>
            <TextBox Name="txtLogin" FontSize="35" Margin="496,337,370,346" TextChanged="TextBox_TextChanged"></TextBox>
            <TextBlock Text="Password:" FontSize="40" Margin="316,415,666,270"></TextBlock>
            <PasswordBox Name="txtPassword" FontSize="35" Margin="496,413,370,270"></PasswordBox>
            <Button Content="Sign in" FontSize="50" Margin="400,500,406,153" Click="Button_Click_1"></Button>
            <Button Content="Sign up" FontSize="50" Margin="400,610,406,43" Click="Button_Click"></Button>
        </Grid>
    </Border>
</Window>
